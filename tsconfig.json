{
    "compilerOptions": {
        "target": "ES2016",
        "module": "ES2015",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "build",
        "sourceMap": true,
        "strict": true,
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "Node",
        "allowUmdGlobalAccess" : true
    },
    "include": [
        "core/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}